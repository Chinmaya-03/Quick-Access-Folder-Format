<Page
    x:Class="tty.Sector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tty"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Left" Margin="80,130,0,0" TextWrapping="Wrap" Text="Enter the radius and the angle of the circle :-" VerticalAlignment="Top" FontFamily="Arial" FontSize="40"/>
        <Image x:ConnectionId='2' x:Name="image" Source="image/sec2.gif " HorizontalAlignment="Left" Height="420" Margin="722,103,0,0" VerticalAlignment="Top" Width="503"/>
        <TextBox x:ConnectionId='3' x:Name="i1" HorizontalAlignment="Left" Margin="94,272,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667" PlaceholderText="Radius"/>
        <TextBlock x:ConnectionId='4' x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,582,0,0" TextWrapping="Wrap" Text="The area of the Sector is :-" VerticalAlignment="Top" FontFamily="Arial" FontSize="33.333"/>
        <TextBlock x:ConnectionId='5' x:Name="Area" HorizontalAlignment="Left" Margin="430,582,0,0" TextWrapping="Wrap" Text="Area" VerticalAlignment="Top" FontFamily="Arial" FontSize="33.333"/>
        <Button x:ConnectionId='6' x:Name="button1" Content="Back to Last Page" HorizontalAlignment="Left" Margin="979,659,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="33.333"                      />
        <TextBox x:ConnectionId='7' x:Name="i2" HorizontalAlignment="Left" Margin="280,272,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667" PlaceholderText="Angle(in radians)"/>
        <Button x:ConnectionId='8' x:Name="button" Content="Evaluate" HorizontalAlignment="Left" Margin="554,272,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667"                     />

    </Grid>
</Page>

