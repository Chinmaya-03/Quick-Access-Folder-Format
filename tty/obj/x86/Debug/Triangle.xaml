<Page
    x:Class="tty.Triangle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tty"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="button" Content="Evaluate" HorizontalAlignment="Left" Margin="531,214,0,0" VerticalAlignment="Top"                      FontFamily="Arial" FontSize="20"/>
        <TextBox x:ConnectionId='2' x:Name="i11" HorizontalAlignment="Left" Margin="116,215,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" PlaceholderText="Side 1"/>
        <TextBlock x:ConnectionId='3' x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="45,123,0,0" TextWrapping="Wrap" Text="Please enter the three sides of the triangle :-" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667"/>
        <TextBox x:ConnectionId='4' x:Name="i21" HorizontalAlignment="Left" Margin="116,492,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" PlaceholderText="Base"/>
        <TextBlock x:ConnectionId='5' x:Name="textBlock1" HorizontalAlignment="Left" Margin="367,322,0,0" TextWrapping="Wrap" Text="Or" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667"/>
        <TextBlock x:ConnectionId='6' x:Name="textBlock1_Copy" HorizontalAlignment="Left" Margin="45,412,0,0" TextWrapping="Wrap" Text="Please enter the length of the height and the base of the triangle :-" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667"/>
        <TextBox x:ConnectionId='7' x:Name="i22" HorizontalAlignment="Left" Margin="266,491,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" PlaceholderText="Height"/>
        <TextBlock x:ConnectionId='8' x:Name="textBlock2" HorizontalAlignment="Left" Margin="45,629,0,0" TextWrapping="Wrap" Text="The area of the Triangle is :-" VerticalAlignment="Top" FontFamily="Arial" FontSize="33.333"/>
        <TextBox x:ConnectionId='9' x:Name="i13" HorizontalAlignment="Left" Margin="398,215,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"                               PlaceholderText="Side 3"/>
        <TextBox x:ConnectionId='10' x:Name="i12" HorizontalAlignment="Left" Margin="266,215,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="20" PlaceholderText="Side 2"/>
        <Image x:ConnectionId='11' x:Name="image"  Source="image/Triangles.jpeg" HorizontalAlignment="Left" Height="416" Margin="793,110,0,0" VerticalAlignment="Top" Width="477"/>
        <Button x:ConnectionId='12' x:Name="button1" Content="Back to Last Page" HorizontalAlignment="Left" Margin="1033,667,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667"                      />
        <Button x:ConnectionId='13' x:Name="button2" Content="Evaluate" HorizontalAlignment="Left" Margin="531,490,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="20"                      />
        <TextBlock x:ConnectionId='14' x:Name="Area" HorizontalAlignment="Left" Margin="474,629,0,0" TextWrapping="Wrap" Text="Area" VerticalAlignment="Top" FontFamily="Arial" FontSize="33.333"/>

    </Grid>
</Page>

