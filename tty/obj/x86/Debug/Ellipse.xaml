<Page
    x:Class="tty.Ellipse"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:tty"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <TextBlock x:ConnectionId='1' x:Name="textBlock" HorizontalAlignment="Left" Margin="85,141,0,0" TextWrapping="Wrap" Text="Enter the length of the axes of the ellipse :-" VerticalAlignment="Top" FontFamily="Arial" FontSize="40"/>
        <TextBox x:ConnectionId='2' x:Name="i1" HorizontalAlignment="Left" Margin="109,260,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667" PlaceholderText="Axes 1 (a)"/>
        <TextBox x:ConnectionId='3' x:Name="i2" HorizontalAlignment="Left" Margin="355,260,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667" PlaceholderText="Axes 2 (b)"/>
        <Button x:ConnectionId='4' x:Name="button" Content="Evaluate" HorizontalAlignment="Left" Margin="597,259,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="26.667"                     />
        <TextBlock x:ConnectionId='5' x:Name="textBlock1" HorizontalAlignment="Left" Margin="10,616,0,0" TextWrapping="Wrap" Text="The area of the Sector is :-" VerticalAlignment="Top" FontFamily="Arial" FontSize="33.333"/>
        <TextBlock x:ConnectionId='6' x:Name="Area" HorizontalAlignment="Left" Margin="427,616,0,0" TextWrapping="Wrap" Text="Area" VerticalAlignment="Top" FontFamily="Arial" FontSize="33.333"/>
        <Button x:ConnectionId='7' x:Name="button1" Content="Back to Last Page" HorizontalAlignment="Left" Margin="979,659,0,0" VerticalAlignment="Top" FontFamily="Arial" FontSize="33.333"                      />
        <Image x:ConnectionId='8' x:Name="image" Source="image/ellipse.png " HorizontalAlignment="Left" Height="420" Margin="751,141,0,0" VerticalAlignment="Top" Width="503"/>

    </Grid>
</Page>

